<h2>新規スケジュール登録</h2>
<% @post.errors.full_messages.each do |error|%>
  <div class="error_message">
    <a><%= error %></a>
  </div>
<%end%>
<%=form_with model: @post do |f| %>
<table>
  <tr>
    <th>タイトル</th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= f.date_field :start_day %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= f.date_field :end_day %></td>
  </tr>
  <tr>
    <th>時間帯</th>
    <td>
      <%= f.select :time_zone, { "朝":"朝","昼":"昼", "夜":"夜", "終日":"終日" }, { include_blank: true }%>
    </td>
  </tr>
  <tr>
    <th>内容</th>
    <td><%= f.text_area :overview %></td>
  </tr>
</table>

<%= f.submit "登録する"%>
<% end %>
<%= link_to "スケジュール一覧", :posts %>